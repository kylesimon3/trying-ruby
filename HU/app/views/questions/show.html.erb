<div class="container">
	<div class="lead well">
	<div class="media">
		<div class="media-left">
			<a href="#">
				<img class="media-object" src="<%= @question.gravatar %>">
			</a>
		</div>
		<div class="media-body">
			<h4 class="media-heading"><%= @question.email %> asked:</h4> 
			<div><%= @question.body %></div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-sm-8 col-sm-offset-2">
		
		<% if @answers.empty? %>
			<div class="alert alert-info">This question hasn't been answered yet, do you know?</div>
		<% end %>	

		<div>
			<button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#new-answer-modal">Submit new answer</a>
		</div>

		<%= render 'home/new_answer_form' %>

		<% @answers.each do |answer| %>	
		<div class="media">
			<div class="media-left">
				<a href="#">
					<img class="media-object" src="<%= answer.gravatar %>">
				</a>
			</div>
			<div class="media-body">
				<h4 class="media-heading"><%= answer.email %> answered:</h4>
				<%= answer.body %>
			</div>
		</div>
		<% end %>
	</div>
</div>
</div>

